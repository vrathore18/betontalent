# Example Terraform Variables
# Copy this file to terraform.tfvars and modify as needed

# General Settings
aws_region   = "us-east-1"
project_name = "secure-cloud-infra"
environment  = "production"

# VPC Settings
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# EC2 Settings
instance_type = "t3.micro"
key_name      = "" # Leave empty to use SSM Session Manager instead of SSH

# Security Settings
allowed_ssh_cidrs = ["10.0.0.0/16"] # Only allow SSH from within VPC

# Bonus Features
enable_aws_config        = true
enable_cloudwatch_alarms = true
alarm_email              = "" # Add your email for security alerts
